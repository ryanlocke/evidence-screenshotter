{
  "manifest_version": 3,
  "name": "Evidence Screenshotter",
  "version": "1.0.0",
  "description": "Capture webpages as legal evidence with original screenshots and AI-extracted readable content",

  "permissions": [
    "activeTab",
    "tabs",
    "scripting",
    "storage",
    "unlimitedStorage",
    "downloads",
    "offscreen"
  ],

  "host_permissions": [
    "<all_urls>"
  ],

  "action": {},

  "background": {
    "service_worker": "service-worker.js",
    "type": "module"
  }
}
