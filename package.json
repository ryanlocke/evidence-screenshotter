{
  "name": "evidence-screenshotter",
  "version": "1.0.0",
  "description": "Capture webpages as legal evidence with original screenshots and extracted content",
  "type": "module",
  "scripts": {
    "dev": "vite build --watch",
    "build": "vite build && vite build --config vite.content.config.ts",
    "build:main": "vite build",
    "build:content": "vite build --config vite.content.config.ts",
    "preview": "vite preview",
    "test": "vitest run"
  },
  "devDependencies": {
    "@types/chrome": "^0.0.268",
    "@types/dompurify": "^3.0.5",
    "jsdom": "^28.1.0",
    "typescript": "^5.3.3",
    "vite": "^7.3.1",
    "vitest": "^4.0.18"
  },
  "dependencies": {
    "@mozilla/readability": "^0.6.0",
    "dompurify": "^3.0.8",
    "html2pdf.js": "^0.14.0"
  }
}
